<!DOCTYPE html>
<html>
  <head>
    <title>Search GitHub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>
    <div class='container'>
      <div class='row'>
        <div class='col-auto pl-0 mt-4 pb-2'>
          <h4>Search GitHub</h4>
        </div>
      </div>
      <div class='row'>
        <% flash.each do |type, message| %>
          <div class="col-12 alert alert-<%= type %>"><%= message %></div>
        <% end %>
      </div>
      <div class='row'>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
